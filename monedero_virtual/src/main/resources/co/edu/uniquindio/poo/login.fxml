<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml"
  fx:controller="co.edu.uniquindio.poo.viewController.LoginViewController"
  style="-fx-background-color: #f5f5f5;"
  prefHeight="600" prefWidth="800">

  <VBox alignment="CENTER" spacing="15">
    <Label text="MONEDERO VIRTUAL"
      style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
    <Label text="Universidad del Quindio" style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;" />
  </VBox>

  <VBox alignment="CENTER" spacing="15" maxWidth="400"
    style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;">

    <Label text="Iniciar Sesion" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <VBox spacing="5">
      <Label text="Email:" />
      <TextField fx:id="emailField" promptText="usuario@uniquindio.edu.co" prefHeight="35" />
    </VBox>

    <VBox spacing="5">
      <Label text="Contrasena:" />
      <PasswordField fx:id="passwordField" promptText="Ingrese su contrasena" prefHeight="35" />
    </VBox>

    <Label fx:id="mensajeLabel" text="" style="-fx-font-size: 12px;" />

    <HBox spacing="10" alignment="CENTER">
      <Button fx:id="loginButton" text="Iniciar Sesion" onAction="#handleLogin"
        style="-fx-background-color: #4CAF50; -fx-text-fill: white;" prefWidth="140" />
      <Button fx:id="registrarButton" text="Registrarse" onAction="#handleRegistrar"
        style="-fx-background-color: #4CAF50; -fx-text-fill: white;" prefWidth="140" />
    </HBox>
  </VBox>

</VBox>